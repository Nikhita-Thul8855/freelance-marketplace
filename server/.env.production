# Production Environment Variables Template
# Copy this to your hosting platform's environment variables section

# Database Configuration
MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/freelance-marketplace

# Authentication
JWT_SECRET=your_super_secure_jwt_secret_key_here_minimum_64_characters_long
JWT_EXPIRE=30d

# Server Configuration
PORT=5000
NODE_ENV=production

# Frontend URLs (update with your actual deployed frontend URLs)
FRONTEND_URL=https://your-app-name.vercel.app
CLIENT_URL=https://your-app-name.netlify.app

# Stripe Configuration (Production Keys)
STRIPE_SECRET_KEY=sk_live_your_live_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_live_your_live_publishable_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_live_webhook_secret_here

# Cloudinary Configuration (Production)
CLOUDINARY_CLOUD_NAME=your_production_cloud_name
CLOUDINARY_API_KEY=your_production_api_key
CLOUDINARY_API_SECRET=your_production_api_secret

# Optional: Database Connection Options
DB_CONNECTION_TIMEOUT=30000
DB_RETRY_WRITES=true
DB_W=majority

# Security
BCRYPT_ROUNDS=12
SESSION_SECRET=your_session_secret_here

# Email Configuration (if needed)
EMAIL_SERVICE=your_email_service
EMAIL_USER=your_email_user
EMAIL_PASS=your_email_password

# Logging
LOG_LEVEL=info
